{
  "manifest_version": 3,
  "name": "Styly.ai",
  "version": "1.0",
  "description": "Virtually try on clothes using your own OpenRouter API key.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["*://*.myntra.com/*"],
  "action": {
    "default_title": "Style Me"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/sidebar.css", "content/sidebar.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
